{
    "manifest_version": 2,
    "name": "Fansly Auth Manager",
    "version": "2.0",
    "description": "Multi-account authentication token manager for Fansly",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "*://fansly.com/*",
        "*://*.fansly.com/*",
        "*://apiv3.fansly.com/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Fansly Auth Manager",
        "default_icon": {
            "128": "icon128.png"
        }
    },
    "icons": {
        "128": "icon128.png"
    },
    "applications": {
        "gecko": {
            "id": "fansly-auth-manager@example.com",
            "strict_min_version": "57.0"
        }
    }
}
